<script>

$(function() {
   $( "#search" ).validate({
	   errorElement:'div',
           rules: {
        	   search2: {
	   required: {
       depends:function(){
           $(this).val($.trim($(this).val()));
           return true;
              }
              },
                           minlength: 4,
                           maxlength: 20
                         //  customvalidation: true,
                         //  email: true
                   } 
                    
              
           },
           messages: {
        	   search2: {
                           required: "44הקלד שם",
                           minlength: $.format(  " המשך להקליד  נדרשות לפחות  {0}  אותיותa    !"),
                           maxlength: $.format(" מכסימום התווים המותרים הינו  {0}  ") 
                          
                   } 
                    
      
                 }

           
   });

   
   $.validator.addMethod("customvalidation",
           function(value, element) {
                   return /^[A-Za-zא-ת\d=#$%@_ -]+$/.test(value);
           },
             "תווים מיוחדים אסורים "
   );
});
</script>
           
  
